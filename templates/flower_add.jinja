{% extends 'base.jinja' %}
{% block content %}
<h1>{{ title }}</h1>

        <form action="/flower_add" method="post">

        <label for="flower_name">Flower name:</label>
        <input type="text" id="flower_name" required name="flower_name"> 

        <label for="price">Price:</label>
        <input type="number" id="price" name="price"> 
        <button type="submit">Add flower</button>
        </form>

{% endblock %}
